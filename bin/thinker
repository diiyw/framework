#!/usr/bin/env php
<?php

/**
 * autoload
 */
require_once __DIR__ . "/../../../autoload.php";
require_once "command/Model.php";
require_once "command/Module.php";
require_once "command/Library.php";

/**
 * Thinker Toolkit
 * Class Thinker
 */
class Thinker extends \Symfony\Component\Console\Application
{
    public function __construct(string $name = 'UNKNOWN', string $version = 'UNKNOWN')
    {
        parent::__construct($name, $version);
        $this->addCommands([
            new \command\Module(),
            new \command\Model(),
            new \command\Library(),
        ]);
    }
}

// run
$thinker = new Thinker();
$thinker->run();